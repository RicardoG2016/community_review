<%= image_tag @post.image.url(:medium) %>
<h1><%= @post.title %></h1>
<p><%= @post.link %></p>  
<p><%= @post.description %></p>
<p><%= @post.user.name %></p>

<span> <%= @post.get_upvotes.size %> </span>: 
<%= link_to "Like", like_post_path(@post), method: :get %>
<br>
<span> <%= @post.get_downvotes.size %> </span>:
<%= link_to "Dislike", dislike_post_path(@post), method: :get %>

<h2><%= comment_count = pluralize(@post.comments.count, "Comment") %></h2>

<% @comments.each do |comment| %>
  <p> username= <%= comment.user.name %> </p>
  <p> content= <%= comment.content %> </p>

  render 'comments/form'
<% end %>

<br>

<%= link_to "Home", root_path %>
<%= link_to "New Post", new_post_path %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Destroy", post_path(@post), method: :delete, data: { confirm: "Are you sure?"} %>
